        <ListView Name="ProductLV"
                  Grid.Row="2" 
                  FontSize="15"
                  Foreground="Black" 
                  SelectionChanged="ProductLV_SelectionChanged"
                  Margin="0,28,17,12">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название"
                            DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Итог"
                            DisplayMemberBinding="{Binding Cost, StringFormat={}{0}₽}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Name="CreateBtn"
                Content="Создать заказ"
                Grid.Row="3"
                Height="80" 
                Width="400" 
                Foreground="Black"
                Click="CreateBtn_Click" 
                Margin="646,5,175,5"/>

        <Button Name="SaveBtn"
                Content="Сохранить выбор"
                Grid.Row="3"
                Height="80" 
                Width="400" 
                Foreground="Black"
                Click="SaveBtn_Click" 
                Margin="176,5,645,5"/>

        <TextBlock Name="TotalCostTbl"
           Grid.Row="3"
           FontSize="20"
           FontWeight="SemiBold" Grid.ColumnSpan="2" Margin="0,0,0,25"/>

        <Button Name="AddProductBtn" 
                Content="Добавить позицию" 
                Click="AddProductBtn_Click"
                Background="AquaMarine" 
                Grid.Row="3" Grid.ColumnSpan="2"
                Height="50" 
                Margin="0,40" Grid.RowSpan="2"/>
